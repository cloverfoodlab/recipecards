{
  "name": "recipecards",
  "version": "0.0.1",
  "description": "Better looking recipe cards",
  "main": "server/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:webpack": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "build": "npm run clean && npm run build:webpack",
    "eslint-check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "start": "node server/index.js",
    "test": "mocha --compilers js:babel-register --recursive",
    "test:watch": "npm test -- --watch"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "now": {
    "alias": "recipes",
    "env": {
      "PEACHWORKS_ACCOUNT_ID": "@peachworks-account-id",
      "PEACHWORKS_ACCESS_TOKEN": "@peachworks-access-token",
      "NODE_ENV": "production"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cloverfoodlab/recipecards.git"
  },
  "author": "Clover Food Lab",
  "bugs": {
    "url": "https://github.com/cloverfoodlab/recipecards/issues"
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-register": "^6.3.13",
    "babel-relay-plugin": "^0.8.0",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-react": "^7.0.1",
    "expect": "^1.18.0",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.0",
    "mocha": "^3.4.1",
    "prettier": "^1.4.4",
    "rimraf": "^2.4.3",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.0.0"
  },
  "dependencies": {
    "axios": "^0.16.1",
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "css-loader": "^0.23.1",
    "express": "^4.15.3",
    "node-fetch": "^1.7.0",
    "node-sass": "^4.5.3",
    "pouchdb": "^6.2.0",
    "pouchdb-adapter-memory": "^6.2.0",
    "query-string": "^4.3.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.2",
    "react-router-dom": "^4.1.1",
    "redux": "^3.3.1",
    "redux-axios-middleware": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "relational-pouch": "^1.4.5",
    "sass-loader": "^6.0.5",
    "webpack": "^1.12.11"
  }
}
